@model LiteCommerce.Admin.Models.ShipperNoPagination
@{
    ViewBag.Title = "Manage shippers";
    ViewBag.SmallTitle = "List, create, edit and delete shippers";
    ViewBag.Manage = "Catalog";
    ViewBag.ManageDetail = "Shippers";
    int i = 1;
}
<div class="box box-header">
    <form action="~/Shipper" method="get">
        <div class="input-group input-group-sm">
            <input type="text" class="form-control" placeholder="Search" name="searchValue">
            <span class="input-group-btn">
                <button type="submit" class="btn btn-info btn-flat"><div class="fa fa-search"></div></button>
            </span>
        </div>
    </form>
</div>
<div class="box box-primary">
    <form action="~/Shipper/Delete" method="post">
        <div class="box-body">
            <div>
                <h3 style="float: right;" class="box-title">
                    <button onclick="return confirm('Do you really want to delete these shippers?')" ; class="btn btn-danger mr-3"
                            type="submit">
                        Delete Shippers
                    </button>
                </h3>
                <h3 style="float: right;padding-right:5px" class="box-title">
                    <a class="btn btn-success mr-3"
                       data-toggle="modal" data-target="#input">Add shipper</a>
                </h3>
            </div>
            <div style="padding-top:25px;">
                There are @Model.RowCount shipper
            </div>
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th style="padding-left:18px;"><input type="checkbox" id="selectAll" /></th>
                        <th style="text-align: center;">#</th>
                        <th>Company Name</th>
                        <th>Phone</th>
                        <th style="text-align: center;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td style="text-align: center;width: 50px;">
                                <input type="checkbox" name="shipperIDs" value="@item.ShipperID" />
                            </td>
                            <td style="text-align: center;">@(i++)</td>
                            <td>@item.CompanyName</td>
                            <td><div class="fa fa-phone"></div> @item.Phone</td>
                            <td style="text-align: center;">
                                <div class="d-flex justify-content-center align-items-center">
                                    <a href="~/Shipper/Input/@item.ShipperID"
                                       class="btn btn-success mr-3"><i class="fa fa-edit"></i></a>
                                    <a style="color: #fff"
                                       onclick="return confirm('Do you really want to delete this shipper?');"
                                       class="btn btn-danger"><i class="fa fa-remove"></i></a>
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </form>
</div>
<div class="modal fade" id="input" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="modal-header">
                <h2 class="modal-title" id="myModalLabel">Add shipper</h2>
            </div>
            <form method="post" action="~/Shipper/Add">
                <div>
                    <input type="hidden" name="shipperID" value="" />
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Company Name</label> <input type="text"
                                                               class="text form-control" placeholder="Company name" required
                                                               name="companyName">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label>Phone</label> <input type="text"
                                                        class="text form-control" placeholder="840969861254" required
                                                        name="phone">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary mb-5" name="subAdd"><div class="fa fa-save"></div> Save</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

